            <CheckBox
                android:id="@+id/chck_selectall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/select_all"
                android:layout_below="@id/or"
                android:visibility="gone"
                android:textSize="@dimen/chk_text"
                />

            <CheckBox
                android:id="@+id/checkBoxLocationsend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/system_location"
                android:layout_below="@id/chck_selectall"
                android:textSize="@dimen/chk_text"
                android:enabled="false"
                 />
            
            <CheckBox
                android:id="@+id/checkBoxBatterySend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="@string/low_battery"
                android:layout_below="@id/checkBoxLocationsend"
                android:textSize="@dimen/chk_text"
                 />

            <CheckBox
                android:id="@+id/checkBoxPickMeSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wait_here"
                android:layout_below="@id/checkBoxBatterySend"
                android:textSize="@dimen/chk_text"
                 />
            
            <CheckBox
                android:id="@+id/checkBoxDontCallSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/not_safe"
                android:layout_below="@id/checkBoxPickMeSend"
                android:textSize="@dimen/chk_text"
                 />

            

            
		<!-- 	<RelativeLayout android:layout_width="wrap_content"
