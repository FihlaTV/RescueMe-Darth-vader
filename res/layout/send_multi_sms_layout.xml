            <TextView
                android:id="@+id/title_nouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/quick_send"
                android:textSize="@dimen/text_size"
                />
            
            <Button
                android:id="@+id/button1Quicksend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/emergency_sms"
                android:background="#FF7700"
                android:layout_below="@id/title_nouse"
                android:textSize="@dimen/chk_text"
                android:textColor="#FFFFFF"
                 />
            <TextView
				android:id="@+id/or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/gray_line"
                android:text="Or Create New"
                android:textSize="@dimen/text_size"
                />
            <ImageView android:id="@+id/gray_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/button1Quicksend"
                android:src="@android:color/darker_gray"/>

